<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--recyclerView-->


    <attr name="divider_width_horizontal" format="dimension" />
    <attr name="divider_height_vertical" format="dimension" />
    <attr name="direction" format="integer">
        <enum name="horizontal" value="0" />
        <enum name="vertical" value="1" />
        <enum name="grid" value="2" />
    </attr>
    <attr name="span_count" format="integer" />
    <attr name="recycler_divider" format="reference" />
    <attr name="empty_id" format="reference" />
    <attr name="lastEnable" format="boolean" /><!--最后一行一列是否画-->


    <declare-styleable name="LRecyclerView">
        <attr name="divider_width_horizontal" />
        <attr name="divider_height_vertical" />
        <attr name="direction" />
        <attr name="span_count" />
        <attr name="recycler_divider" />
        <attr name="empty_id" />
        <attr name="lastEnable"/>
    </declare-styleable>

    <declare-styleable name="RefreshRecyclerView">
        <attr name="divider_width_horizontal" />
        <attr name="divider_height_vertical" />
        <attr name="direction" />
        <attr name="span_count" />
        <attr name="recycler_divider" />
        <attr name="empty_id" />
        <attr name="lastEnable"/>
    </declare-styleable>
    <!--recyclerView结束-->



</resources>